{
  "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noImplicitAnyLet": "off"
      }
    },
    "ignore": ["node_modules", "dist", "coverage"]
  }
}
